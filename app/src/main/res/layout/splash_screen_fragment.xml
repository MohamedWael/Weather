<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.github.mohamedwael.weather.modules.splash.SplashScreenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".modules.splash.SplashScreenFragment">

        <ImageView
            android:id="@+id/ivSun"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_sunny"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.36" />

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/slogan_top_margin"
            android:gravity="center"
            android:text="@string/hi"
            android:textSize="@dimen/slogan_font_size"
            app:layout_constraintEnd_toEndOf="@+id/ivSun"
            app:layout_constraintStart_toStartOf="@+id/ivSun"
            app:layout_constraintTop_toBottomOf="@+id/ivSun" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>